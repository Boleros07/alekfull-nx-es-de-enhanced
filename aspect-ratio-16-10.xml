16:10 Apsect Ratio - Defaults
(based on 1280x800 Resolution)
-->

<theme>

   <view name="system,gamelist">
      <helpsystem name="help">
         <pos>0.94 0.93</pos>
         <fontSize>0.022</fontSize>
      </helpsystem>
   </view>

   <view name="system">
      <carousel name="system-carousel">
         <pos>-0.531 0.194</pos>
         <size>1.76 1</size>
         <itemScale>1.12</itemScale>
         <itemSize>0.158 0.252</itemSize>
      </carousel>
      <text name="system-info">
         <size>0.28 0.02</size>
         <pos>0.080 0.93</pos>
         <fontSize>0.028</fontSize>
      </text>
      <image name="mask">
         <origin>0 .5</origin>
         <pos>0 .5</pos>
         <size>1 0</size>
         <path>./_inc/images/utility/system-view-mask-16-10-${colorScheme}.png</path>
      </image>
   </view>

   <variant name="Basic,Detailed">
      <view name="gamelist">
         <image name="logo">
            <pos>0.07 0.92</pos>
            <maxSize>0.10 0.04</maxSize>
         </image>
         <textlist name="game-list">
            <pos>0.080 0.108</pos>
            <size>0.35 0.7</size>
            <horizontalMargin>0.006</horizontalMargin>
            <fontSize>0.0207</fontSize>
            <lineSpacing>2.075</lineSpacing>
         </textlist>
         <image name="mask">
            <size>1 0</size>
            <path>./_inc/images/utility/gamelist-view-mask-16-10-${colorScheme}.png</path>
         </image>
      </view>
   </variant>

   <variant name="Detailed">
      <view name="gamelist">
         <rating name="rating">
            <pos>0.502 0.525</pos>
            <size>0 0.026</size>
         </rating>
         <text name="genre">
            <pos>0.502 0.571</pos>
            <size>0.125 0.021</size>
            <fontSize>0.021</fontSize>
            <metadata>genre</metadata>
         </text>
         <text name="players">
